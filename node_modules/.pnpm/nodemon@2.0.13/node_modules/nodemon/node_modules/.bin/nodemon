#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/workspace/first-mern-app/node_modules/.pnpm/nodemon@2.0.13/node_modules/nodemon/bin/node_modules:/workspace/first-mern-app/node_modules/.pnpm/nodemon@2.0.13/node_modules/nodemon/node_modules:/workspace/first-mern-app/node_modules/.pnpm/nodemon@2.0.13/node_modules:/workspace/first-mern-app/node_modules/.pnpm/node_modules:/workspace/first-mern-app/node_modules:/workspace/node_modules:/node_modules"
else
  export NODE_PATH="$NODE_PATH:/workspace/first-mern-app/node_modules/.pnpm/nodemon@2.0.13/node_modules/nodemon/bin/node_modules:/workspace/first-mern-app/node_modules/.pnpm/nodemon@2.0.13/node_modules/nodemon/node_modules:/workspace/first-mern-app/node_modules/.pnpm/nodemon@2.0.13/node_modules:/workspace/first-mern-app/node_modules/.pnpm/node_modules:/workspace/first-mern-app/node_modules:/workspace/node_modules:/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/nodemon.js" "$@"
else
  exec node  "$basedir/../../bin/nodemon.js" "$@"
fi
